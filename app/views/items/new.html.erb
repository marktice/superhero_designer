<div class="container">
  <h1>Create A New Item!</h1>

  <form action="/items" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="form-group">
      <label for="label">Item Name</label>
      <input type="text" name="label" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="description">Description: </label>
      <textarea name="description" rows="2" class="form-control" required></textarea>
    </div>

    <div class="form-group">
      <label for="price">Price: </label>
      <input type="number" name="price" min='0.01' step='0.01' max='100' class="form-control" required>
    </div>

    <div class="form-group">
      <select name="item_type" required>
        <option value="">Item Type</option>
        <option value="1">Capes</option>
        <option value="2">Lycra</option>
        <option value="3">Masks</option>
        <option value="4">Hats</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Create Item</button>
  </form>
</div>